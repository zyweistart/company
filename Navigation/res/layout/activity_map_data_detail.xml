<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white">
    
	<include layout="@layout/module_main_header" />
    
	<TextView
	    android:id="@+id/activity_map_data_description_txt"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"/>
	
	<Button
	    android:id="@+id/activity_map_data_download"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="onClick"
        android:text="@string/lvitem_mapdata_download_txt"/>
	
	<Button
	    android:id="@+id/activity_map_data_use"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="onClick"
        android:visibility="gone"
        android:text="@string/lvitem_mapdata_use_txt"/>
	
</LinearLayout>