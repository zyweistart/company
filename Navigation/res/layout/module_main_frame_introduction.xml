<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/module_main_frame_introduction_content"
    android:orientation="vertical" 
    android:gravity="center_vertical|center_horizontal"
    android:layout_width="fill_parent" 
    android:layout_height="fill_parent">
    
    <Button 
        android:id="@+id/module_main_frame_introduction_btnHospital"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="医院介绍"/>
    <Button 
        android:id="@+id/module_main_frame_introduction_btnDepartment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="部门介绍"/>
    <Button 
        android:id="@+id/module_main_frame_introduction_btnDoctor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="医生介绍"/>
    
</LinearLayout>