<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:background="@color/white">
    
	<include layout="@layout/module_main_header" />

	<Button
	    android:id="@+id/more_btn_login"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:onClick="onClick"
	    android:text="登录"/>
	
	<LinearLayout 
	    android:layout_width="match_parent"
	    android:layout_height="match_parent"
	    android:orientation="vertical"
	    android:padding="20.0dip">
	    
	    <LinearLayout 
		    android:layout_width="match_parent"
		    android:layout_height="wrap_content"
		    android:background="@drawable/more_frame"
		    android:orientation="vertical">
		    
		    <RelativeLayout
		         android:id="@+id/more_frame_friends_manager"
				android:layout_width="match_parent" 
				android:layout_height="40.0dip"
				android:onClick="onClick"
				android:padding="5.0dip">
			    <LinearLayout
					android:layout_width="match_parent" 
					android:layout_height="match_parent"
					android:layout_centerVertical="true"
			        android:layout_alignParentLeft="true"
					android:orientation="horizontal" >
				    <ImageView
				        android:layout_width="30.0dip"
				        android:layout_height="30.0dip"
				        android:src="@drawable/more_icon"
				        android:contentDescription="@string/empty"/>
				    <TextView
				        android:layout_width="match_parent"
				        android:layout_height="wrap_content"
				        android:gravity="center_vertical"
				        android:layout_marginLeft="5.0dip"
				        android:textColor="@color/lvitem_textcolor"
				        android:textSize="@dimen/lvitem_textsize1"
				        android:text="好友管理"/>
				</LinearLayout>
			    <ImageView
			        android:layout_width="wrap_content"
			        android:layout_height="wrap_content"
			        android:layout_centerVertical="true"
			        android:layout_alignParentRight="true"
			        android:src="@drawable/bakchat_submenu_normal"
			        android:contentDescription="@string/empty"/>
			</RelativeLayout>
			
		    <View
	               android:layout_width="match_parent"
	               android:layout_height="1.0dip"
	               android:background="#ffc9c9c9" />
		    
		    <RelativeLayout
		        android:id="@+id/more_frame_map_manager"
				android:layout_width="match_parent" 
				android:layout_height="40.0dip"
				android:onClick="onClick"
				android:padding="5.0dip">
			    <LinearLayout
					android:layout_width="match_parent" 
					android:layout_height="match_parent"
					android:layout_centerVertical="true"
			        android:layout_alignParentLeft="true"
					android:orientation="horizontal" >
				    <ImageView
				        android:layout_width="30.0dip"
				        android:layout_height="30.0dip"
				        android:src="@drawable/more_icon"
				        android:contentDescription="@string/empty"/>
				    <TextView
				        android:layout_width="match_parent"
				        android:layout_height="wrap_content"
				        android:gravity="center_vertical"
				        android:layout_marginLeft="5.0dip"
				        android:textColor="@color/lvitem_textcolor"
				        android:textSize="@dimen/lvitem_textsize1"
				        android:text="数据管理"/>
				</LinearLayout>
			    <ImageView
			        android:layout_width="wrap_content"
			        android:layout_height="wrap_content"
			        android:layout_centerVertical="true"
			        android:layout_alignParentRight="true"
			        android:src="@drawable/bakchat_submenu_normal"
			        android:contentDescription="@string/empty"/>
			</RelativeLayout> 
		    
		</LinearLayout>
	    
	    <View
	        android:layout_width="match_parent"
	        android:layout_height="20.0dip"/>
	    
	    <LinearLayout 
		    android:layout_width="match_parent"
		    android:layout_height="wrap_content"
		    android:background="@drawable/more_frame"
		    android:orientation="vertical">
		    
		    <RelativeLayout
		        android:id="@+id/more_frame_version_check"
				android:layout_width="match_parent" 
				android:layout_height="40.0dip"
				android:onClick="onClick"
				android:padding="5.0dip">
			    <LinearLayout
					android:layout_width="match_parent" 
					android:layout_height="match_parent"
					android:layout_centerVertical="true"
			        android:layout_alignParentLeft="true"
					android:orientation="horizontal" >
				    <ImageView
				        android:layout_width="30.0dip"
				        android:layout_height="30.0dip"
				        android:src="@drawable/more_icon"
				        android:contentDescription="@string/empty"/>
				    <TextView
				        android:layout_width="match_parent"
				        android:layout_height="wrap_content"
				        android:gravity="center_vertical"
				        android:layout_marginLeft="5.0dip"
				        android:textColor="@color/lvitem_textcolor"
				        android:textSize="@dimen/lvitem_textsize1"
				        android:text="检测新版本"/>
				</LinearLayout>
			</RelativeLayout>
		    
		</LinearLayout>
	    
	    <View
	        android:layout_width="match_parent"
	        android:layout_height="20.0dip"/>
	    
	    <Button 
			android:id="@+id/more_btn_logout"
	        android:layout_width="300.0dip"
	        android:layout_height="wrap_content"
	        android:layout_margin="5.0dip"
	        android:onClick="onClick"
	        android:background="@drawable/bg2_selector"
	        android:textColor="@color/white"
	        android:textSize="@dimen/lvitem_textsize1"
	        android:text="关闭应用"/>
	    
	</LinearLayout>
	
</LinearLayout>