<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:background="@color/white">
    
	<include layout="@layout/module_main_header" />

	<LinearLayout
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:layout_margin="10.0dip"
       android:orientation="vertical" >

	    <LinearLayout
           android:id="@+id/more_login"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:clickable="true"
           android:focusable="true"
           android:onClick="onClick"
           android:orientation="horizontal"
           android:gravity="center_vertical|center_horizontal"
           android:background="@drawable/list_blockbg_top_selector">
           <TextView
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:paddingLeft="5.0dip"
			   android:paddingRight="10.0dip"
			   android:layout_marginTop="5.0dip"
			   android:layout_marginBottom="5.0dip"
			   android:drawableLeft="@drawable/ic_more_account"
			   android:drawableRight="@drawable/more_arrow"
			   android:gravity="center_vertical"
               android:textColor="#888888"
               android:textSize="20.0dip"
               android:text="@string/login" />
       </LinearLayout>
       
       <LinearLayout
           android:id="@+id/more_logout"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:clickable="true"
           android:focusable="true"
           android:onClick="onClick"
           android:orientation="horizontal"
           android:gravity="center_vertical|center_horizontal"
           android:background="@drawable/list_blockbg_top_selector">
           <TextView
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:paddingLeft="5.0dip"
			   android:paddingRight="10.0dip"
			   android:layout_marginTop="5.0dip"
			   android:layout_marginBottom="5.0dip"
			   android:drawableLeft="@drawable/ic_more_logout"
			   android:gravity="center_vertical"
               android:textColor="#888888"
               android:textSize="20.0dip"
               android:text="@string/logout" />
       </LinearLayout>
       
       <View
           android:layout_width="match_parent"
           android:layout_height="1.0dip"
           android:layout_marginLeft="1.0dip"
           android:layout_marginRight="1.0dip"
           android:background="@drawable/view_line_style" />
	    
       <LinearLayout
           android:id="@+id/more_friend_relation_manager"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:clickable="true"
           android:focusable="true"
           android:onClick="onClick"
           android:orientation="horizontal"
           android:gravity="center_vertical|center_horizontal"
           android:background="@drawable/list_blockbg_middle_selector">
           <TextView
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:paddingLeft="5.0dip"
			   android:paddingRight="10.0dip"
			   android:layout_marginTop="5.0dip"
			   android:layout_marginBottom="5.0dip"
			   android:drawableLeft="@drawable/ic_more_friend"
			   android:drawableRight="@drawable/more_arrow"
			   android:gravity="center_vertical"
               android:textColor="#888888"
               android:textSize="20.0dip"
               android:text="@string/msg_friend_manager" />
       </LinearLayout>

       <View
           android:layout_width="match_parent"
           android:layout_height="1.0dip"
           android:layout_marginLeft="1.0dip"
           android:layout_marginRight="1.0dip"
           android:background="@drawable/view_line_style" />
       
       <LinearLayout
           android:id="@+id/more_data_file_manager"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:clickable="true"
           android:focusable="true"
           android:onClick="onClick"
           android:orientation="horizontal"
           android:gravity="center_vertical|center_horizontal"
           android:background="@drawable/list_blockbg_middle_selector">
           <TextView
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:paddingLeft="5.0dip"
			   android:paddingRight="10.0dip"
			   android:layout_marginTop="5.0dip"
			   android:layout_marginBottom="5.0dip"
			   android:drawableLeft="@drawable/ic_more_data"
			   android:drawableRight="@drawable/more_arrow"
			   android:gravity="center_vertical"
               android:textColor="#888888"
               android:textSize="20.0dip"
               android:text="@string/msg_data_manager" />
       </LinearLayout>

       <View
           android:layout_width="match_parent"
           android:layout_height="1.0dip"
           android:layout_marginLeft="1.0dip"
           android:layout_marginRight="1.0dip"
           android:background="@drawable/view_line_style" />
       
       <LinearLayout
           android:id="@+id/more_modifypwd"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:clickable="true"
           android:focusable="true"
           android:onClick="onClick"
           android:orientation="horizontal"
           android:gravity="center_vertical|center_horizontal"
           android:background="@drawable/list_blockbg_middle_selector">
           <TextView
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:paddingLeft="5.0dip"
			   android:paddingRight="10.0dip"
			   android:layout_marginTop="5.0dip"
			   android:layout_marginBottom="5.0dip"
			   android:drawableLeft="@drawable/ic_more_pwd"
			   android:drawableRight="@drawable/more_arrow"
			   android:gravity="center_vertical"
               android:textColor="#888888"
               android:textSize="20.0dip"
               android:text="@string/activity_title_modify_pwd" />
       </LinearLayout>

       <View
           android:layout_width="match_parent"
           android:layout_height="1.0dip"
           android:layout_marginLeft="1.0dip"
           android:layout_marginRight="1.0dip"
           android:background="@drawable/view_line_style" />
       
       <LinearLayout
           android:id="@+id/more_new_version_check"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:clickable="true"
           android:focusable="true"
           android:onClick="onClick"
           android:orientation="horizontal"
           android:gravity="center_vertical|center_horizontal"
           android:background="@drawable/list_blockbg_bottom_selector">
           <TextView
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:paddingLeft="5.0dip"
			   android:paddingRight="10.0dip"
			   android:layout_marginTop="5.0dip"
			   android:layout_marginBottom="5.0dip"
			   android:drawableLeft="@drawable/ic_more_version"
			   android:gravity="center_vertical"
               android:textColor="#888888"
               android:textSize="20.0dip"
               android:text="@string/msg_new_version_check" />
       </LinearLayout>
             
   </LinearLayout>
   
	<Button
	    android:id="@+id/more_btn_exit_app"
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:background="@drawable/bg2_selector"
	    android:textColor="@color/white"
	    android:textSize="20.0dip"
	    android:layout_margin="10.0dip"
	    android:onClick="onClick"
	    android:text="@string/msg_exit_app"/>
	
</LinearLayout>