<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/activity_gb"
    android:orientation="vertical" >
    <include layout="@layout/common_title" />
    <LinearLayout  
	    android:layout_width="fill_parent"
	    android:layout_height="35dip"
	    android:orientation="horizontal" 
	    android:background="@drawable/account_recharge_title_total_bg">
	    <TextView
	        android:layout_width="fill_parent"
	        android:layout_height="35dip"
	        android:layout_weight="4.5"
	        android:background="@drawable/account_recharge_title_bg"
	        android:gravity="center"
	        android:singleLine="true"
	        android:text="套餐选择"
	        android:textColor="#FFFFFF"
	        android:textSize="18dp" />
	    <TextView
	        android:layout_width="fill_parent"
	        android:layout_height="35dip"
	        android:layout_weight="5.5"
	        android:gravity="center"
	        android:singleLine="true"
	        android:text="确认信息"
	        android:textColor="#666666"
	        android:textSize="18dp" />
	    <TextView
	        android:layout_width="fill_parent"
	        android:layout_height="35dip"
	        android:layout_weight="6"
	        android:gravity="center"
	        android:singleLine="true"
	        android:text="支付"
	        android:textColor="#666666"
	        android:textSize="18dp" />
	    <TextView
	        android:layout_width="fill_parent"
	        android:layout_height="35dip"
	        android:layout_weight="6"
	        android:gravity="center"
	        android:singleLine="true"
	        android:text="成功"
	        android:textColor="#666666"
	        android:textSize="18dp" />
	</LinearLayout>
    
    <com.ancun.widget.PullToRefreshListView
        android:id="@+id/account_recharge_pulltorefreshlistview"
        android:cacheColorHint="#00000000"
        android:divider="#f5fafe"
        android:dividerHeight="1dp"
        android:listSelector="#f5fafe"
        android:choiceMode="singleChoice"
        android:fadingEdge="none"
        android:fadeScrollbars="true"
        android:fastScrollEnabled="true" 
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
</LinearLayout>