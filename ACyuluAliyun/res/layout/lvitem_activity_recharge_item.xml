<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/lvitem_activity_myaccount_recharge_item_layout"
    android:layout_width="match_parent"
    android:layout_height="45.0dip"
    android:background="@drawable/list_item_color_bg"
    android:padding="@dimen/spacing_3"
    android:orientation="horizontal" >

    <TextView
        android:id="@+id/lvitem_activity_myaccount_recharge_item_txt1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="left|center"/>

    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical">
        <TextView
            android:id="@+id/lvitem_activity_myaccount_recharge_item_txt2"
	        android:layout_width="match_parent"
	        android:layout_height="match_parent"
	        android:gravity="center"/>
    </LinearLayout>
    
    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical">
        <TextView
            android:id="@+id/lvitem_activity_myaccount_recharge_item_txt3"
	        android:layout_width="match_parent"
	        android:layout_height="match_parent"
	        android:layout_weight="1"
	        android:gravity="center|right"/>
        <TextView
            android:id="@+id/lvitem_activity_myaccount_recharge_item_txt4"
	        android:layout_width="match_parent"
	        android:layout_height="match_parent"
	        android:layout_weight="1"
	        android:gravity="center|right"
	        android:textColor="#ff0000"/>
    </LinearLayout>

</LinearLayout>