<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="2dip"
    android:background="@drawable/list_item_color_bg"
    android:descendantFocusability="blocksDescendants"
    android:orientation="vertical" >

    

    <TextView
        android:id="@+id/contact_alpha"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:cacheColorHint="#00000000"
        android:paddingBottom="3dip"
        android:paddingLeft="5dip"
        android:paddingTop="3dip"
        android:textAppearance="?android:textAppearanceMedium"
        android:textColor="#33b5e5"
        android:visibility="gone" />

    <View
        android:id="@+id/contact_alpha_view"
        android:layout_width="fill_parent"
        android:layout_height="2dip"
        android:background="#33b5e5"
        android:visibility="gone" />

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="3dip" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/contact_image_view"
            android:layout_width="65dip"
            android:layout_height="65dip"
            android:layout_gravity="center"
            android:layout_marginLeft="5dip"
            android:layout_marginRight="10dip" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="60dip"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/contact_name_text"
                android:layout_width="fill_parent"
                android:layout_height="30dip"
                android:layout_gravity="center_vertical"
                android:paddingTop="5dip"
                android:singleLine="true"
                android:text=""
                android:textAppearance="?android:textAppearanceMedium"
                android:textColor="#FFFFFF" />

            <TextView
                android:id="@+id/contact_phone_text"
                android:layout_width="fill_parent"
                android:layout_height="20dip"
                android:layout_gravity="center_vertical"
                android:layout_marginTop="10dip"
                android:singleLine="true"
                android:text="aaaaaa"
                android:textAppearance="?android:textAppearanceSmall"
                android:textColor="#AAAAAA"
                android:visibility="gone" />
        </LinearLayout>

        <ImageButton
            android:id="@+id/contact_changestatus_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="#00000000"
            android:focusable="false"
            android:paddingRight="5dip" 
            android:visibility="gone"/>
    </LinearLayout>

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="3dip" />

</LinearLayout>