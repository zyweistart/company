<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/lvitem_activity_myaccount_recharge_item_layout"
    android:layout_width="match_parent"
    android:layout_height="45.0dip"
    android:baselineAligned="true"
    android:padding="@dimen/spacing_2"
    android:orientation="horizontal" >

    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center"
        android:paddingLeft="@dimen/spacing_1"
        android:orientation="horizontal">
        
        <TextView
	        android:id="@+id/lvitem_activity_myaccount_recharge_item_txt1"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:layout_weight="1"
	        android:textSize="@dimen/fontsize_h1"
	        android:textColor="#313131"
	        android:gravity="left|center"/>
        
        <TextView
            android:id="@+id/lvitem_activity_myaccount_recharge_item_txt2"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:layout_weight="2"
	        android:textSize="@dimen/fontsize_h0"
	        android:textColor="#c5c5c5"
	        android:gravity="left|center"/>
        
    </LinearLayout>
    
    <FrameLayout 
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1">
        
        <ImageView 
            android:id="@+id/myaccount_recharge_used_img"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/spacing_2"
            android:layout_gravity="left"
            android:contentDescription="@string/empty"/>
        
        <LinearLayout 
            android:id="@+id/lvitem_activity_myaccount_recharge_item_fr_time"
	        android:layout_width="match_parent"
	        android:layout_height="match_parent"
	        android:gravity="center"
	        android:paddingRight="@dimen/spacing_1"
	        android:orientation="vertical">
	        
		    <LinearLayout 
		        android:layout_width="match_parent"
		        android:layout_height="wrap_content"
		        android:gravity="center|right"
		        android:orientation="horizontal">
		        
		        <TextView
			        android:layout_width="wrap_content"
			        android:layout_height="wrap_content"
			        android:textColor="#353535"
			        android:text="生效"/>
		        
		        <TextView
		            android:id="@+id/lvitem_activity_myaccount_recharge_item_txt3"
			        android:layout_width="wrap_content"
			        android:layout_height="wrap_content"
			        android:textColor="#99c0cf"
			        android:layout_margin="@dimen/spacing_2"/>
		        
		    </LinearLayout>
		    
	        <LinearLayout 
		        android:layout_width="match_parent"
		        android:layout_height="wrap_content"
		        android:gravity="center|right"
		        android:orientation="horizontal">
		        
		        <TextView
			        android:layout_width="wrap_content"
			        android:layout_height="wrap_content"
			        android:textColor="#353535"
			        android:text="到期"/>
		        
		        <TextView
		            android:id="@+id/lvitem_activity_myaccount_recharge_item_txt4"
			        android:layout_width="wrap_content"
			        android:layout_height="wrap_content"
			        android:textColor="#fb232e"
			        android:layout_margin="@dimen/spacing_2"/>
		        
		    </LinearLayout>
		    
	    </LinearLayout>
	    <TextView
	        android:id="@+id/lvitem_activity_myaccount_recharge_item_txt5"
	        android:layout_width="match_parent"
	        android:layout_height="match_parent"
	        android:layout_weight="1"
	        android:textColor="#353535"
	        android:gravity="center|right"
	        android:paddingRight="@dimen/spacing_6"
	        android:layout_margin="@dimen/spacing_2"
	        android:text="不限时长"/>
	    
    </FrameLayout>
    
</LinearLayout>