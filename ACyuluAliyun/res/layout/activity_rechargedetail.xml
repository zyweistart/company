<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/activity_gb"
    android:orientation="vertical">
    
    <include layout="@layout/common_title" />
    
    <ScrollView 
       	android:layout_width="match_parent"
       	android:layout_height="match_parent">
       	
       	<LinearLayout 
       	    android:layout_width="match_parent"
       	    android:layout_height="match_parent"
       	    android:orientation="vertical">
       	    
       	    <LinearLayout  
			        android:id="@+id/activity_rechargedetail_fr_detail"
				    android:layout_width="match_parent"
				    android:layout_height="match_parent"
				    android:orientation="vertical">
				    
			        <LinearLayout  
					    android:layout_width="match_parent"
					    android:layout_height="wrap_content"
					    android:orientation="horizontal" 
					    android:background="@drawable/account_recharge_title_total_bg">
					    
					    <TextView
					        android:layout_width="match_parent"
					        android:layout_height="wrap_content"
					        android:padding="@dimen/spacing_5"
					        android:background="@drawable/account_recharge_title_bg_before"
					        android:layout_weight="1"
					        android:gravity="center"
					        android:singleLine="true"
					        android:textColor="@color/white"
					        android:textSize="@dimen/fontsize_h0"
					        android:text="选择套餐" />
					    
					    <TextView
					        android:layout_width="match_parent"
					        android:layout_height="wrap_content"
					        android:padding="@dimen/spacing_5"
					        android:background="@drawable/account_recharge_title_bg"
					        android:layout_weight="1"
					        android:gravity="center"
					        android:singleLine="true"
					        android:textColor="@color/white"
					        android:textSize="@dimen/fontsize_h0"
					        android:text="确认信息" />
					    
					    <TextView
					        android:layout_width="match_parent"
					        android:layout_height="wrap_content"
					        android:padding="@dimen/spacing_5"
					        android:layout_weight="1"
					        android:gravity="center"
					        android:singleLine="true"
					        android:textColor="@android:color/darker_gray"
					        android:textSize="@dimen/fontsize_h0"
					        android:text="支付" />
					    
					    <TextView
					        android:layout_width="match_parent"
					        android:layout_height="wrap_content"
					        android:padding="@dimen/spacing_5"
					        android:layout_weight="1"
					        android:gravity="center"
					        android:singleLine="true"
					        android:textColor="@android:color/darker_gray"
					        android:textSize="@dimen/fontsize_h0"
					        android:text="成功" />
					    
					</LinearLayout>
					
				    <LinearLayout
				        android:layout_width="match_parent"
				        android:layout_height="wrap_content"
				        android:layout_margin="@dimen/spacing_9"
				        android:paddingLeft="@dimen/spacing_9"
				        android:paddingTop="@dimen/spacing_9"
				        android:paddingRight="@dimen/spacing_9"
				        android:background="@drawable/account_recharge_radiogroup_bg"
				        android:orientation="vertical" >
					    
					    <TextView
					        android:id="@+id/activity_rechargedetail_packages_tip"
				            android:layout_width="wrap_content"
				            android:layout_height="wrap_content"
				            android:layout_margin="@dimen/spacing_5"
				            android:textColor="#666666"
				            android:textSize="@dimen/fontsize_h1" 
				            android:gravity="left|center"
				            android:visibility="gone"
				            android:text="新选套餐"/>
					    
				        <LinearLayout
				            android:layout_width="match_parent"
				            android:layout_height="wrap_content"
				            android:padding="@dimen/spacing_5"
				            android:orientation="horizontal" >
				            
				            <TextView
				                android:layout_width="100.dip"
				                android:layout_height="wrap_content"
				                android:gravity="center|right"
				                android:textColor="#666666"
				                android:textSize="@dimen/fontsize_h1"
				                android:text="套餐名称：" />
				            
				            <TextView
				                android:id="@+id/activity_rechargedetail_name"
				                android:layout_width="wrap_content"
				                android:layout_height="wrap_content"
				                android:gravity="left|center"
				                android:textColor="#ff0000"
				                android:textSize="@dimen/fontsize_h1"/>
				            
				        </LinearLayout>
				        
				        <LinearLayout
				            android:id="@+id/activity_rechargedetail_fr_num"
				            android:layout_width="match_parent"
				            android:layout_height="wrap_content"
				            android:padding="@dimen/spacing_5"
				            android:orientation="horizontal"
				            android:visibility="gone">
				            
				            <TextView
				                android:layout_width="100.dip"
				                android:layout_height="wrap_content"
				                android:gravity="center|right"
				                android:textColor="#666666"
				                android:textSize="@dimen/fontsize_h1"
				                android:text="购买份数：" />
				            
				            <Spinner 
						        android:id="@+id/activity_rechargedetail_num_spi5"
						        android:layout_width="wrap_content"
						        android:layout_height="wrap_content"
						        android:drawSelectorOnTop = "true"
						        android:gravity="center"
						        android:prompt ="@string/activity_accountrecharge_duration_spi5_prompt"/>
				            
				        </LinearLayout>
				        
				        <LinearLayout
				            android:layout_width="match_parent"
				            android:layout_height="wrap_content"
				            android:padding="@dimen/spacing_5"
				            android:orientation="horizontal" >
				            
				            <TextView
				                android:layout_width="100.dip"
				                android:layout_height="wrap_content"
				                android:gravity="center|right"
				                android:textColor="#666666"
				                android:textSize="@dimen/fontsize_h1"
				                android:text="套餐价值：" />
				            
				            <TextView
				                android:id="@+id/activity_rechargedetail_value"
				                android:layout_width="wrap_content"
				                android:layout_height="wrap_content"
				                android:gravity="left|center"
				                android:textColor="#ff0000"
				                android:textSize="@dimen/fontsize_h1"/>
				            
				        </LinearLayout>
				        
				        <LinearLayout
				            android:layout_width="match_parent"
				            android:layout_height="wrap_content"
				            android:padding="@dimen/spacing_5"
				            android:orientation="horizontal" >
				            
				            <TextView
				                 android:layout_width="100.dip"
				                android:layout_height="wrap_content"
				                android:gravity="center|right"
				                android:textColor="#666666"
				                android:textSize="@dimen/fontsize_h1"
				                android:text="支付金额：" />
				            
				            <TextView
				                android:id="@+id/activity_rechargedetail_price"
				                android:layout_width="wrap_content"
				                android:layout_height="wrap_content"
				                android:gravity="left|center"
				                android:textColor="#ff0000"
				                android:textSize="@dimen/fontsize_h1"/>
				            
				            <TextView
				                android:layout_width="wrap_content"
				                android:layout_height="wrap_content"
				                android:gravity="left|center"
				                android:textColor="#666666"
				                android:textSize="@dimen/fontsize_h1"
				                android:text="元"/>
				            
				        </LinearLayout>
				        
				        <LinearLayout
				            android:id="@+id/activity_rechargedetail_fr_valid"
				            android:layout_width="match_parent"
				            android:layout_height="wrap_content"
				            android:padding="@dimen/spacing_5"
				            android:orientation="horizontal" >
				            
				            <TextView
				                android:layout_width="100.dip"
				                android:layout_height="wrap_content"
				                android:gravity="center|right"
				                android:textColor="#666666"
				                android:textSize="@dimen/fontsize_h1"
				                android:text="有效期：" />
				            
				            <TextView
				                android:id="@+id/activity_rechargedetail_valid"
				                android:layout_width="wrap_content"
				                android:layout_height="wrap_content"
				                android:gravity="left|center"
				                android:textColor="#ff0000"
				                android:textSize="@dimen/fontsize_h1"/>
				            
				        </LinearLayout>
				        
				        <LinearLayout
				            android:id="@+id/activity_rechargedetail_fr_starttime"
				            android:layout_width="match_parent"
				            android:layout_height="wrap_content"
				            android:padding="@dimen/spacing_5"
				            android:orientation="horizontal" >
				            
				            <TextView
				                android:layout_width="100.dip"
				                android:layout_height="wrap_content"
				                android:gravity="center|right"
				                android:textColor="#666666"
				                android:textSize="@dimen/fontsize_h1"
				                android:text="生效日期：" />
				            
				            <TextView
				                android:id="@+id/activity_rechargedetail_starttime"
				                android:layout_width="wrap_content"
				                android:layout_height="wrap_content"
				                android:gravity="left|center"
				                android:textColor="#ff0000"
				                android:textSize="@dimen/fontsize_h1"/>
				            
				        </LinearLayout>
				        
				        <LinearLayout
				            android:id="@+id/activity_rechargedetail_fr_endtime"
				            android:layout_width="match_parent"
				            android:layout_height="wrap_content"
				            android:padding="@dimen/spacing_5"
				            android:orientation="horizontal" >
				            
				            <TextView
				                android:layout_width="100.dip"
				                android:layout_height="wrap_content"
				                android:gravity="center|right"
				                android:textColor="#666666"
				                android:textSize="@dimen/fontsize_h1"
				                android:text="到期日期：" />
				            
				            <TextView
				                android:id="@+id/activity_rechargedetail_endtime"
				                android:layout_width="wrap_content"
				                android:layout_height="wrap_content"
				                android:gravity="left|center"
				                android:textColor="#ff0000"
				                android:textSize="@dimen/fontsize_h1"/>
				            
				        </LinearLayout>
				        
				        <LinearLayout
				            android:layout_width="match_parent"
				            android:layout_height="wrap_content"
				            android:padding="@dimen/spacing_5"
				            android:orientation="horizontal" >
				            
				            <TextView
				                android:layout_width="100.dip"
				                android:layout_height="wrap_content"
				                android:gravity="center|right"
				                android:textColor="#666666"
				                android:textSize="@dimen/fontsize_h1"
				                android:text="充值账户：" />
				            
				            <TextView
				                android:id="@+id/activity_rechargedetail_account"
				                android:layout_width="wrap_content"
				                android:layout_height="wrap_content"
				                android:gravity="left|center"
				                android:textColor="#ff0000"
				                android:textSize="@dimen/fontsize_h1"/>
				            
				        </LinearLayout>
				        <LinearLayout
				            android:id="@+id/activity_rechargedetail_fr_oldaccount"
				            android:layout_width="match_parent"
				            android:layout_height="wrap_content"
				            android:orientation="vertical" 
				            android:visibility="gone">
				            
				            <View
					            android:layout_width="match_parent"
					            android:layout_height="1dip"
					            android:layout_marginLeft="1dip"
					            android:layout_marginRight="1dip"
					            android:layout_marginTop="20dip"
					            android:background="#e5e5e5" />
				            
				            <TextView
					            android:layout_width="wrap_content"
					            android:layout_height="wrap_content"
					            android:layout_margin="@dimen/spacing_5"
					            android:gravity="left|center"
					            android:text="原套餐"
					            android:textColor="#666666"
					            android:textSize="@dimen/fontsize_h1" />
				            
					        <LinearLayout
					            android:layout_width="match_parent"
					            android:layout_height="wrap_content"
					            android:padding="@dimen/spacing_5"
					            android:orientation="horizontal" >
					            
					            <TextView
					                android:layout_width="100.dip"
					                android:layout_height="wrap_content"
					                android:gravity="center|right"
					                android:textColor="#666666"
					                android:textSize="@dimen/fontsize_h1"
					                android:text="套餐价值：" />
					            
					            <TextView
					                android:id="@+id/activity_rechargedetail_oldvalue"
					                android:layout_width="wrap_content"
					                android:layout_height="wrap_content"
					                android:gravity="left|center"
					                android:textColor="#ff0000"
					                android:textSize="@dimen/fontsize_h1"/>
					            
					        </LinearLayout>
					        
					        <LinearLayout
					            android:layout_width="match_parent"
					            android:layout_height="wrap_content"
					            android:padding="@dimen/spacing_5"
					            android:orientation="horizontal" >
					            
					            <TextView
					                android:layout_width="100.dip"
					                android:layout_height="wrap_content"
					                android:gravity="center|right"
					                android:textColor="#666666"
					                android:textSize="@dimen/fontsize_h1"
					                android:text="到期日期：" />
					            
					            <TextView
					                android:id="@+id/activity_rechargedetail_oldendtime"
					                android:layout_width="wrap_content"
					                android:layout_height="wrap_content"
					                android:gravity="left|center"
					                android:textColor="#ff0000"
					                android:textSize="@dimen/fontsize_h1"/>
					            
					        </LinearLayout>
					        
					        <LinearLayout
					            android:id="@+id/activity_rechargedetail_fr_convertmoney"
					            android:layout_width="match_parent"
					            android:layout_height="wrap_content"
					            android:padding="@dimen/spacing_5"
					            android:orientation="horizontal"
					            android:visibility="gone" >
					            
					            <TextView
					                android:layout_width="100.dip"
					                android:layout_height="wrap_content"
					                android:gravity="center|right"
					                android:textColor="#666666"
					                android:textSize="@dimen/fontsize_h1"
					                android:text="折算金额：" />
					            
					            <TextView
					                android:id="@+id/activity_rechargedetail_convertmoney"
					                android:layout_width="wrap_content"
					                android:layout_height="wrap_content"
					                android:gravity="left|center"
					                android:textColor="#ff0000"
					                android:textSize="@dimen/fontsize_h1"/>
					            
					        </LinearLayout>
					        
					        
				        </LinearLayout>
				        
				        <View
				            android:layout_width="match_parent"
				            android:layout_height="1dip"
				            android:layout_marginLeft="1dip"
				            android:layout_marginRight="1dip"
				            android:layout_marginTop="20dip"
				            android:background="#e5e5e5" />
				        
				        <Button
				            android:id="@+id/activity_rechargedetail_btn_payment"
				            android:layout_width="match_parent"
				            android:layout_height="wrap_content"
				            android:layout_margin="@dimen/spacing_9"
				            android:background="@drawable/account_recharge_submit_selector"
				            android:textSize="@dimen/fontsize_h2"
				            android:textColor="@color/white"
				            android:text="确认充值" />
				        
				    </LinearLayout>
			        
			    </LinearLayout>
			    
			    <LinearLayout  
				    android:id="@+id/activity_rechargedetail_fr_result"
				    android:layout_width="match_parent"
				    android:layout_height="match_parent"
				    android:orientation="vertical"
				    android:visibility="gone">
				    
				    <LinearLayout  
					    android:layout_width="match_parent"
					    android:layout_height="wrap_content"
					    android:orientation="horizontal" 
					    android:background="@drawable/account_recharge_title_total_bg">
				        
					    <TextView
					        android:layout_width="match_parent"
					        android:layout_height="wrap_content"
					        android:padding="@dimen/spacing_5"
					        android:background="@drawable/account_recharge_title_bg_before"
					        android:layout_weight="1"
					        android:gravity="center"
					        android:singleLine="true"
					        android:textColor="@color/white"
					        android:textSize="@dimen/fontsize_h1"
					        android:text="选择套餐" />
					    
					    <TextView
					        android:layout_width="match_parent"
					        android:layout_height="wrap_content"
					        android:padding="@dimen/spacing_5"
					        android:background="@drawable/account_recharge_title_bg_before"
					        android:layout_weight="1"
					        android:gravity="center"
					        android:singleLine="true"
					        android:textColor="@color/white"
					        android:textSize="@dimen/fontsize_h1"
					        android:text="确认信息" />
					    
					    <TextView
					        android:layout_width="match_parent"
					        android:layout_height="wrap_content"
					        android:padding="@dimen/spacing_5"
					        android:background="@drawable/account_recharge_title_bg_before"
					        android:layout_weight="1"
					        android:gravity="center"
					        android:singleLine="true"
					        android:textColor="@color/white"
					        android:textSize="@dimen/fontsize_h1"
					        android:text="支付" />
					    
					    <TextView
					        android:layout_width="match_parent"
					        android:layout_height="wrap_content"
					        android:padding="@dimen/spacing_5"
					        android:background="@drawable/account_recharge_title_bg"
					        android:layout_weight="1"
					        android:gravity="center"
					        android:singleLine="true"
					        android:textColor="@color/white"
					        android:textSize="@dimen/fontsize_h1"
					        android:text="成功" />
					    
					</LinearLayout>
				    
				    <LinearLayout
				        android:layout_width="match_parent"
				        android:layout_height="wrap_content"
				        android:layout_margin="@dimen/spacing_9"
				        android:padding="@dimen/spacing_9"
				        android:background="@drawable/account_recharge_radiogroup_bg"
				        android:orientation="vertical" >
				
				        <LinearLayout
				            android:layout_width="match_parent"
				            android:layout_height="wrap_content"
				            android:orientation="horizontal" >
				
				            <ImageView
				                android:layout_width="wrap_content"
				                android:layout_height="wrap_content"
				                android:background="@drawable/account_recharge_success_pic"
				                android:contentDescription="@string/empty" />
				
				            <TextView
				                android:layout_width="match_parent"
				                android:layout_height="wrap_content"
				                android:layout_marginLeft="@dimen/spacing_5"
				                android:textColor="#000000"
				                android:textSize="@dimen/fontsize_h1" 
				                android:text="充值成功"/>
				            
				        </LinearLayout>
				
				        <TextView
				            android:id="@+id/activity_rechargedetail_result_content"
				            android:layout_width="match_parent"
				            android:layout_height="match_parent"
				            android:layout_margin="@dimen/spacing_5"
				            android:textColor="#666666"
				            android:textSize="@dimen/fontsize_h1" />
				        
				        <View
				            android:layout_width="match_parent"
				            android:layout_height="1dip"
				            android:layout_margin="@dimen/spacing_0"
				            android:background="#e5e5e5" />
				        
				        <Button
				            android:id="@+id/activity_rechargedetail_btn_paymentback"
				            android:layout_width="match_parent"
				            android:layout_height="wrap_content"
				            android:layout_margin="@dimen/spacing_9"
				            android:background="@drawable/account_recharge_submit_selector"
				            android:textSize="@dimen/fontsize_h2"
				            android:textColor="@color/white"
				            android:text="返回我的账户" />
				        
				    </LinearLayout>
				    
				</LinearLayout>
				
       	 </LinearLayout>
       	 
	</ScrollView>
	
</LinearLayout>