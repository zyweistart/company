<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_vertical|center_horizontal"
    android:background="@drawable/activity_welcome_background" >

    <ImageView
        android:id="@+id/activity_welcome_logo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/welcome_tip_txt"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:src="@drawable/activity_welcome_logo"
        android:contentDescription="@string/empty" />
    
     <ImageView
        android:id="@+id/welcome_tip_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:src="@drawable/welcome_tip_txt"
        android:contentDescription="@string/empty" />

    <ImageView
        android:id="@+id/activity_welcome_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:src="@drawable/activity_welcome_text"
        android:contentDescription="@string/empty" />

    <ImageView
        android:id="@+id/activity_welcome_buliding"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/activity_welcome_building_background"
        android:contentDescription="@string/empty"
        android:layout_above="@+id/activity_welcome_text"  />

</RelativeLayout>