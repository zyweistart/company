<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/activity_gb"
    android:orientation="vertical" >

    <include layout="@layout/common_title" />

    <LinearLayout  
    android:layout_width="fill_parent"
    android:layout_height="35dip"
    android:orientation="horizontal" 
    android:background="@drawable/account_recharge_title_total_bg">

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="35dip"
        android:layout_weight="4.5"
        android:background="@drawable/account_recharge_title_bg_before"
        android:gravity="center"
        android:singleLine="true"
        android:text="套餐选择"
        android:textColor="#FFFFFF"
        android:textSize="18dp" />

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="35dip"
        android:layout_weight="5.5"
        android:gravity="center"
        android:singleLine="true"
        android:text="确认信息"
        android:textColor="#FFFFFF"
        android:textSize="18dp"
        android:background="@drawable/account_recharge_title_bg_before" />

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="35dip"
        android:layout_weight="6"
        android:gravity="center"
        android:singleLine="true"
        android:text="支付"
        android:textColor="#FFFFFF"
        android:textSize="18dp" 
        android:background="@drawable/account_recharge_title_bg_before"/>

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="35dip"
        android:layout_weight="6"
        android:gravity="center"
        android:singleLine="true"
        android:text="成功"
        android:textColor="#FFFFFF"
        android:textSize="18dp"
         android:background="@drawable/account_recharge_title_bg" />

</LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dip"
        android:layout_marginRight="30dip"
        android:layout_marginTop="20dip"
        android:background="@drawable/account_recharge_radiogroup_bg"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dip"
            android:layout_marginRight="30dip"
            android:layout_marginTop="20dip"
            android:gravity="center"
            android:orientation="horizontal" >

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/account_recharge_success_pic" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dip"
                android:text="充值成功"
                android:textColor="#000000"
                android:textSize="24dp" />
        </LinearLayout>

        <Button
            android:id="@+id/account_recharge_result_submit"
            android:layout_width="fill_parent"
            android:layout_height="35dip"
            android:layout_marginBottom="25dip"
            android:layout_marginLeft="25dip"
            android:layout_marginRight="25dip"
            android:layout_marginTop="25dip"
            android:background="@drawable/account_recharge_submit_selector"
            android:text="返回主界面"
            android:textColor="#FFFFFF" />
    </LinearLayout>

</LinearLayout>