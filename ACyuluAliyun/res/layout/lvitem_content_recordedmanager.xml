<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
   android:layout_marginTop="2dip"
    android:background="@drawable/list_item_color_bg"
    android:id="@+id/recordeditemlayout"
    android:orientation="vertical" 
    >

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="3dip" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/recorded_main_head_img"
            android:layout_width="65dip"
            android:layout_height="65dip"
            android:layout_gravity="center"
            android:layout_marginRight="10dip"
            android:layout_marginLeft="5dip"
            android:src="@drawable/contact_head" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginRight="0dip"
            android:gravity="center_vertical"
            android:orientation="vertical" 
            >

            <TextView
                android:id="@+id/recorded_main_name"
                android:layout_width="fill_parent"
                android:layout_height="25dip"
                android:layout_gravity="center_vertical"
                android:singleLine="true"
                android:text="aaaaaa"
                android:textAppearance="?android:textAppearanceMedium"
                 android:textColor="#FFFFFF"/>

            <TextView
                android:id="@+id/recorded_main_phone"
                android:layout_width="fill_parent"
                android:layout_height="20dip"
                android:layout_gravity="center_vertical"
                android:singleLine="true"
                android:layout_marginTop="2dip"
                android:text="aaaaaa"
                android:textAppearance="?android:textAppearanceSmall"
                android:textColor="#AAAAAA" />

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                >



                <TextView
                    android:id="@+id/recorded_main_from"
                    android:layout_width="wrap_content"
                   android:layout_height="20dip"
                    android:layout_marginLeft="0dip"
                    android:singleLine="true"
                    android:text="aaaaaa"
                    android:textAppearance="?android:textAppearanceSmall"
                    android:textColor="#AAAAAA" 
                    android:layout_centerVertical="true"/>
            </RelativeLayout>
        </LinearLayout>


        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1.0"
            android:layout_gravity="bottom"
            android:layout_marginRight="12dip"
            android:orientation="vertical" >
            <TextView
                android:id="@+id/recorded_main_count"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:singleLine="true"
                android:gravity="right"
                android:text="5个录音"
                android:textAppearance="?android:textAppearanceSmall"
                android:textColor="#AAAAAA" />
            <TextView
                android:id="@+id/recorded_main_time_count"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:gravity="right"
                android:text="400小时"
                android:textAppearance="?android:textAppearanceSmall"
                android:textColor="#AAAAAA" />
        </LinearLayout>
    </LinearLayout>

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="3dip" />

</LinearLayout>




 
