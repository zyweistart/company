<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/common_account_recharge_item"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#a1daee">
    <FrameLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
	    <LinearLayout
	        android:layout_width="match_parent"
	        android:layout_height="80dip"
		    android:layout_marginRight="30dip"
	        android:gravity="center_vertical"
	        android:orientation="horizontal">
            <LinearLayout
	            android:layout_width="match_parent"
	            android:layout_height="wrap_content"
	        android:layout_marginLeft="40dip"
	            android:orientation="vertical" >
	            <TextView
	                android:id="@+id/common_account_recharge_item_fee"
	                android:layout_width="fill_parent"
	                android:layout_height="35dip"
	                android:gravity="center_vertical"
	                android:singleLine="true"
	                android:text="10元套餐"
	                android:textStyle="bold" 
	                android:textColor="#3774ad"
	                android:textSize="25dp" />
	            <TextView
	                android:id="@+id/common_account_recharge_item_remark"
	                android:layout_width="fill_parent"
	                android:layout_height="20dip"
	                android:layout_gravity="center_vertical"
	                android:singleLine="true"
	                android:text="500元兑换200分钟通话时长"
	                android:textColor="#5992bd"
	                android:textSize="15dp" />
	        </LinearLayout>
    	</LinearLayout>
    	<ImageView
    	    android:id="@+id/common_account_recharge_item_sale"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"/>
     </FrameLayout>
    <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@drawable/account_recharge_item_button_selector" />
</RelativeLayout>
