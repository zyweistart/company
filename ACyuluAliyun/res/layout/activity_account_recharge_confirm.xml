<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/activity_gb"
    android:orientation="vertical" >
    <include layout="@layout/common_title" />
    <ScrollView 
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout 
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" >
	        <LinearLayout  
			    android:layout_width="fill_parent"
			    android:layout_height="35dip"
			    android:orientation="horizontal" 
			    android:background="@drawable/account_recharge_title_total_bg">
			    <TextView
			        android:layout_width="fill_parent"
			        android:layout_height="35dip"
			        android:layout_weight="4.5"
			        android:background="@drawable/account_recharge_title_bg_before"
			        android:gravity="center"
			        android:singleLine="true"
			        android:text="套餐选择"
			        android:textColor="#FFFFFF"
			        android:textSize="18dp" />
			    <TextView
			         android:id="@+id/account_recharge_confirm_info"
			        android:layout_width="fill_parent"
			        android:layout_height="35dip"
			        android:layout_weight="5.5"
			        android:gravity="center"
			        android:singleLine="true"
			        android:text="确认信息"
			        android:textColor="#FFFFFF"
			        android:textSize="18dp"
			        android:background="@drawable/account_recharge_title_bg" />
			    <TextView
			        android:id="@+id/account_recharge_confirm_pay"
			        android:layout_width="fill_parent"
			        android:layout_height="35dip"
			        android:layout_weight="6"
			        android:gravity="center"
			        android:singleLine="true"
			        android:text="支付"
			        android:textColor="#666666"
			        android:textSize="18dp" />
			    <TextView
			        android:layout_width="fill_parent"
			        android:layout_height="35dip"
			        android:layout_weight="6"
			        android:gravity="center"
			        android:singleLine="true"
			        android:text="成功"
			        android:textColor="#666666"
			        android:textSize="18dp" />
			</LinearLayout>
		    <LinearLayout
		        android:layout_width="fill_parent"
		        android:layout_height="wrap_content"
		        android:layout_marginLeft="30dip"
		        android:layout_marginRight="30dip"
		        android:layout_marginTop="20dip"
		        android:background="@drawable/account_recharge_radiogroup_bg"
		        android:orientation="vertical" >
			    <TextView
		            android:layout_width="wrap_content"
		            android:layout_height="wrap_content"
		            android:layout_marginLeft="10dip"
		            android:layout_marginTop="20dip"
		            android:gravity="left|center"
		            android:text="充值信息"
		            android:textColor="#666666"
		            android:textSize="18dp" />
		        <LinearLayout
		            android:layout_width="fill_parent"
		            android:layout_height="wrap_content"
		            android:layout_marginLeft="0dip"
		            android:layout_marginRight="0dip"
		            android:layout_marginTop="0dip"
		            android:orientation="horizontal" >
		            <TextView
		                android:layout_width="wrap_content"
		                android:layout_height="wrap_content"
		                android:layout_marginLeft="10dip"
		                android:layout_marginTop="20dip"
		                android:gravity="left|center"
		                android:text="充值账户："
		                android:textColor="#666666"
		                android:textSize="18dp" />
		            <TextView
		                android:id="@+id/account_recharge_confirm_account"
		                android:layout_width="wrap_content"
		                android:layout_height="wrap_content"
		                android:layout_marginLeft="10dip"
		                android:layout_marginTop="20dip"
		                android:gravity="left|center"
		                android:textColor="#ff0000"
		                android:textSize="18dp" />
		        </LinearLayout>
		        <LinearLayout
		            android:layout_width="fill_parent"
		            android:layout_height="wrap_content"
		            android:layout_marginLeft="0dip"
		            android:layout_marginRight="0dip"
		            android:layout_marginTop="0dip"
		            android:orientation="horizontal" >
		            <TextView
		                android:layout_width="wrap_content"
		                android:layout_height="wrap_content"
		                android:layout_marginLeft="10dip"
		                android:layout_marginTop="20dip"
		                android:gravity="left|center"
		                android:text="充值金额："
		                android:textColor="#666666"
		                android:textSize="18dp" />
		            <TextView
		                android:id="@+id/account_recharge_confirm_amount"
		                android:layout_width="wrap_content"
		                android:layout_height="wrap_content"
		                android:layout_marginLeft="10dip"
		                android:layout_marginTop="20dip"
		                android:gravity="left|center"
		                android:textColor="#ff0000"
		                android:textSize="18dp" />
		            <TextView
		                android:layout_width="wrap_content"
		                android:layout_height="wrap_content"
		                android:layout_marginLeft="10dip"
		                android:layout_marginTop="20dip"
		                android:gravity="left|center"
		                android:text="元"
		                android:textColor="#666666"
		                android:textSize="18dp" />
		        </LinearLayout>
		        <View
		            android:layout_width="fill_parent"
		            android:layout_height="1dip"
		            android:layout_marginLeft="1dip"
		            android:layout_marginRight="1dip"
		            android:layout_marginTop="20dip"
		            android:background="#e5e5e5" />
		        <TextView
		            android:layout_width="wrap_content"
		            android:layout_height="wrap_content"
		            android:layout_marginLeft="10dip"
		            android:layout_marginTop="20dip"
		            android:gravity="left|center"
		            android:text="账户信息"
		            android:textColor="#666666"
		            android:textSize="18dp" />
		        <LinearLayout
		            android:layout_width="fill_parent"
		            android:layout_height="wrap_content"
		            android:layout_marginLeft="0dip"
		            android:layout_marginRight="0dip"
		            android:layout_marginTop="0dip"
		            android:orientation="horizontal" >
		            <TextView
		                android:layout_width="wrap_content"
		                android:layout_height="wrap_content"
		                android:layout_marginLeft="10dip"
		                android:layout_marginTop="20dip"
		                android:gravity="left|center"
		                android:text="原剩余录音时长："
		                android:textColor="#666666"
		                android:textSize="18dp" />
		            <TextView
		                android:id="@+id/account_recharge_confirm_original_account"
		                android:layout_width="wrap_content"
		                android:layout_height="wrap_content"
		                android:layout_marginLeft="10dip"
		                android:layout_marginTop="20dip"
		                android:gravity="left|center"
		                android:textColor="#ff0000"
		                android:textSize="18dp" />
		            <TextView
		                android:layout_width="wrap_content"
		                android:layout_height="wrap_content"
		                android:layout_marginLeft="10dip"
		                android:layout_marginTop="20dip"
		                android:gravity="left|center"
		                android:text="分钟"
		                android:textColor="#666666"
		                android:textSize="18dp" />
		        </LinearLayout>
		        <LinearLayout
		            android:layout_width="fill_parent"
		            android:layout_height="wrap_content"
		            android:layout_marginLeft="0dip"
		            android:layout_marginRight="0dip"
		            android:layout_marginTop="0dip"
		            android:orientation="horizontal" >
		            <TextView
		                android:layout_width="wrap_content"
		                android:layout_height="wrap_content"
		                android:layout_marginLeft="10dip"
		                android:layout_marginTop="20dip"
		                android:gravity="left|center"
		                android:text="现可用录音时长："
		                android:textColor="#666666"
		                android:textSize="18dp" />
		            <TextView
		                android:id="@+id/account_recharge_confirm_now_account"
		                android:layout_width="wrap_content"
		                android:layout_height="wrap_content"
		                android:layout_marginLeft="10dip"
		                android:layout_marginTop="20dip"
		                android:gravity="left|center"
		                android:textColor="#ff0000"
		                android:textSize="18dp" />
		            <TextView
		                android:layout_width="wrap_content"
		                android:layout_height="wrap_content"
		                android:layout_marginLeft="10dip"
		                android:layout_marginTop="20dip"
		                android:gravity="left|center"
		                android:text="分钟"
		                android:textColor="#666666"
		                android:textSize="18dp" />
		        </LinearLayout>
		        <Button
		            android:id="@+id/account_recharge_confirm_submit"
		            android:layout_width="fill_parent"
		            android:layout_height="wrap_content"
		            android:layout_marginBottom="25dip"
		            android:layout_marginLeft="25dip"
		            android:layout_marginRight="25dip"
		            android:layout_marginTop="25dip"
		            android:background="@drawable/account_recharge_submit_selector"
		            android:text="确认充值"
		            android:textSize="18dp"
		            android:textColor="#FFFFFF" />
		    </LinearLayout>
        </LinearLayout>
    </ScrollView></LinearLayout>